<resources>
    <!-- Base application theme. -->
    <style name="Theme.SimpleSoundQuickSettings" parent="Theme.Material3.DayNight.NoActionBar">
        <!--
        Material 3 themes automatically use dynamic colors on API 31+ (Android 12+).
        The colors defined in colors.xml can be used as a fallback on older versions
        by mapping them to Material 3 color attributes like colorPrimary, colorOnPrimary etc.
        If not specified, Material 3 provides its own default baseline theme.
        -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <!-- Set the preference theme to Material 3 to style all preference components -->
        <item name="preferenceTheme">@style/App.Preference.Theme</item>
    </style>
</resources>